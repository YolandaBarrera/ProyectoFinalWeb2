<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <!-- Hacer la página responsive: ajusta la escala al ancho del dispositivo -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!-- CSS de Materialize: framework de estilo para botones, inputs, cards, etc. -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
  <!-- CSS -->
  <link href="/styles.css" rel="stylesheet" />
</head>
<body class="login-bg"> 
  <div class="container login-container">
    <div class="panel login-panel">
      <div class="login-info">
        <h4>Iniciar sesión</h4> 
        <p class="muted">Ingresa con tu usuario y contraseña</p> 
      </div>
      <!-- Wrapper del formulario de login -->
      <div class="login-form-wrapper">
        <div class="card login-card"> <!-- Card de Materialize  -->
          <div class="card-content">

            <!-- Formulario -->
            <form id="formLogin">

              <!-- Campo de usuario -->
              <div class="input-field">
                <input type="text" name="username" id="username" required />
                <label for="username">Usuario</label>
              </div>
        
              <!-- Campo de contraseña -->
              <div class="input-field">
                <input type="password" name="password" id="password" required />
                <label for="password">Contraseña</label>
              </div>
              
              <!-- Botón de login -->
              <div class="center login-btn-wrapper">
                <button class="btn blue" type="submit">Acceder</button>
              </div>

            </form>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- JS de Materialize -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

  <!-- Script: manejo del login vía fetch -->
  <script>
    // Captura el evento submit del formulario
    document.getElementById('formLogin').addEventListener('submit', async (e) => {
      e.preventDefault(); // evita que se recargue la página al enviar

      // Obtiene los valores de los inputs
      const username = document.getElementById('username').value;
      const password = document.getElementById('password').value;

      // Hace una petición POST al endpoint /api/login enviando username y password
      const res = await fetch('/api/login', {
        method:'POST',
        headers:{'Content-Type':'application/json'},
        body: JSON.stringify({username, password})
      });

      // Convierte la respuesta a JSON
      const data = await res.json();

      // Si el login es exitoso, redirige a la página principal
      if (data.ok) window.location = '/';
      else {
        // Si hay error, muestra un toast de Materialize 
        if (window.M && M.toast) M.toast({html: data.message || 'Error'});
        else alert(data.message || 'Error');
      }

    });
  </script>
</body>
</html>
