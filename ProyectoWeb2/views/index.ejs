<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Usuarios</title>

  <!-- Google Icons + Materialize CSS -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">

  <!-- Tu CSS -->
  <link href="/styles.css" rel="stylesheet" />
</head>
<body>
  <div class="container">
    <div class="topbar">
      <div style="display:flex; gap:12px; align-items:center;">
        <img src="/img/icon.png" alt="logo" style="width:44px; height:44px; border-radius:8px; object-fit:cover;">
        <div>
          <div style="font-weight:700; font-size:1.05rem; color:#0b2b4a">Panel de Usuarios</div>
          <div class="muted">Admin · Bienvenido <%= username || '' %></div>
        </div>
      </div>
      <div>
        <button id="logoutBtn" class="btn blue">Cerrar sesión</button>
      </div>
    </div>

    <div class="panel">
      <h4>Agregar Usuario</h4>
      <form action="/add" method="POST" id="addFormServer">
        <div class="row form-row" style="margin-bottom:0;">
          <div class="input-field col s4">
            <input type="text" name="name" id="name" required />
            <label for="name">Nombre</label>
          </div>
          <div class="input-field col s4">
            <input type="email" name="email" id="email" required />
            <label for="email">Correo</label>
          </div>
          <div class="col s4 btn-col">
            <button class="btn green" type="submit">Agregar</button>
          </div>
        </div>
      </form>
    </div>

    <div class="panel">
      <h4 class="center">Lista de Usuarios</h4>
      <table class="highlight centered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody id="tbody">
          <% if (lista && lista.length) { %>
            <% lista.forEach(u => { %>
              <tr data-id="<%= u.id %>">
                <td class="td-id"><%= u.id %></td>
                <td class="td-nombre"><span class="text"><%= u.nombre %></span></td>
                <td class="td-correo"><span class="text"><%= u.correo %></span></td>
                <td class="td-actions">
                  <button class="btn-small blue editBtn">Editar</button>
                  <a href="/delete/<%= u.id %>" class="btn-small red deleteBtn" onclick="return confirm('¿Eliminar este usuario?');">Eliminar</a>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr><td colspan="4" class="center muted">No hay usuarios</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Materialize JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

  <!-- Cliente: inline edit y logout (usa fetch a /update/:id y POST /api/logout) -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // logout
      const lb = document.getElementById('logoutBtn');
      if (lb) lb.addEventListener('click', async (e) => {
        e.preventDefault();
        await fetch('/api/logout', { method: 'POST' });
        window.location = '/login';
      });

      // Delegación para editar/eliminar
      document.getElementById('tbody').addEventListener('click', async (e) => {
        const tr = e.target.closest('tr');
        if (!tr) return;
        const id = tr.dataset.id;

        // Edit button
        if (e.target.classList.contains('editBtn')) {
          if (tr.classList.contains('editing')) return;
          tr.classList.add('editing');

          const nombreCell = tr.querySelector('.td-nombre');
          const correoCell = tr.querySelector('.td-correo');
          const actionsCell = tr.querySelector('.td-actions');
          const currentName = nombreCell.textContent.trim();
          const currentEmail = correoCell.textContent.trim();

          nombreCell.innerHTML = '<input class="input-inline" name="name" value="'+escapeHtml(currentName)+'">';
          correoCell.innerHTML = '<input class="input-inline" name="email" value="'+escapeHtml(currentEmail)+'">';

          // hide edit/delete buttons
          actionsCell.querySelectorAll('a, button').forEach(x => x.style.display = 'none');

          const saveBtn = document.createElement('button');
          saveBtn.className = 'btn-small green';
          saveBtn.innerText = 'Guardar';

          const cancelBtn = document.createElement('button');
          cancelBtn.className = 'btn-small grey';
          cancelBtn.innerText = 'Cancelar';

          actionsCell.appendChild(saveBtn);
          actionsCell.appendChild(cancelBtn);

          cancelBtn.addEventListener('click', (ev) => {
            ev.preventDefault();
            nombreCell.innerHTML = '<span class="text">'+escapeHtml(currentName)+'</span>';
            correoCell.innerHTML = '<span class="text">'+escapeHtml(currentEmail)+'</span>';
            saveBtn.remove();
            cancelBtn.remove();
            actionsCell.querySelectorAll('a, button').forEach(x => x.style.display = '');
            tr.classList.remove('editing');
          });

          saveBtn.addEventListener('click', async (ev) => {
            ev.preventDefault();
            const name = nombreCell.querySelector('input').value.trim();
            const email = correoCell.querySelector('input').value.trim();
            if (!name || !email) {
              if (window.M && M.toast) M.toast({html:'Campos requeridos'});
              else alert('Campos requeridos');
              return;
            }
            try {
              const res = await fetch('/update/' + id, {
                method: 'POST',
                headers: {'Content-Type':'application/json'},
                body: JSON.stringify({ name, email })
              });
              const data = await res.json ? await res.json() : null;
              if (res.ok && (data === null || data.ok === true || res.status === 200)) {
                nombreCell.innerHTML = '<span class="text">'+escapeHtml(name)+'</span>';
                correoCell.innerHTML = '<span class="text">'+escapeHtml(email)+'</span>';
                saveBtn.remove();
                cancelBtn.remove();
                actionsCell.querySelectorAll('a, button').forEach(x => x.style.display = '');
                tr.classList.remove('editing');
              } else {
                throw new Error((data && data.message) || 'Error al guardar');
              }
            } catch (err) {
              console.error(err);
              if (window.M && M.toast) M.toast({html:'Error al guardar'});
              else alert('Error al guardar');
            }
          });
        }
      });
    });

    function escapeHtml(str) {
      if (!str) return '';
      return String(str).replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;').replace(/"/g,'&quot;');
    }
  </script>
</body>
</html>
