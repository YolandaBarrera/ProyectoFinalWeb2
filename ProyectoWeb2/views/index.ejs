<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Panel</title>

  <!-- Google Icons + Materialize CSS -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">

  <!-- Tu CSS -->
  <link href="/styles.css" rel="stylesheet" />
</head>
<body>
  <nav class="blue darken-3">
    <div class="nav-wrapper container">
      <a href="#" class="brand-logo">Panel</a>
      <ul class="right">
        <li><a id="logoutBtn" href="#!">Salir</a></li>
      </ul>
    </div>
  </nav>

  <div class="container" style="margin-top: 30px;">
    <h4>Agregar Usuario</h4>

    <!-- FORM SERVER-SIDE: POST /add -->
    <form action="/add" method="POST" id="addFormServer">
      <div class="row">
        <div class="input-field col s4">
          <!-- usamos name/email para mapear directamente a la BD; el backend también acepta nombre/correo -->
          <input type="text" name="name" id="name" required />
          <label for="name">Nombre</label>
        </div>
        <div class="input-field col s4">
          <input type="email" name="email" id="email" required />
          <label for="email">Correo</label>
        </div>
        <div class="col s4" style="margin-top: 20px;">
          <button class="btn green" type="submit">Agregar</button>
        </div>
      </div>
    </form>

    <h4 class="center">Lista de Usuarios</h4>
    <table class="highlight centered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Correo</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody id="tbody">
        <% if (lista && lista.length) { %>
          <% lista.forEach(u => { %>
            <tr data-id="<%= u.id %>">
              <td class="td-id"><%= u.id %></td>
              <td class="td-nombre"><span class="text"><%= u.nombre %></span></td>
              <td class="td-correo"><span class="text"><%= u.correo %></span></td>
              <td class="td-actions">
                <button class="btn-small editBtn">Editar</button>
                <a href="/delete/<%= u.id %>" class="btn-small red deleteBtn" onclick="return confirm('¿Eliminar este usuario?');">Eliminar</a>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4">No hay usuarios</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- Materialize JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

  <!-- Script cliente: inline editing, delete (confirm) y logout -->
  <script src="/app.js"></script>
</body>
</html>
